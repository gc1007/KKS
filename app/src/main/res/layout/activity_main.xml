<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_game_over"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/novo" />

    <Button
        android:id="@+id/bt_mp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/antic_slab"
        android:onClick="go_to_modo_normal"
        android:text="@string/bt_mp1"
        android:textAllCaps="true"
        android:textColor="@drawable/text_main_bt"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp2"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/bt_mp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/antic_slab"
        android:onClick="go_to_modo_rapido"
        android:text="@string/bt_mp2"
        android:textAllCaps="true"
        android:textColor="@drawable/text_main_bt"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/creditos"
        app:layout_constraintEnd_toEndOf="@+id/bt_mp1"
        app:layout_constraintStart_toStartOf="@+id/bt_mp1"
        app:layout_constraintTop_toBottomOf="@+id/bt_mp1" />

    <Button
        android:id="@+id/creditos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/antic_slab"
        android:onClick="go_to_creditos"
        android:text="@string/txt_creditos"
        android:textAllCaps="true"
        android:textColor="@drawable/text_main_bt"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signature"
        app:layout_constraintEnd_toEndOf="@+id/bt_mp2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_mp2"
        app:layout_constraintTop_toBottomOf="@+id/bt_mp2" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/signature"
        android:textColor="#F1EEEE"
        android:textSize="20sp"
        app:fontFamily="@font/antic_slab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/creditos"
        app:layout_constraintStart_toStartOf="@+id/creditos"
        app:layout_constraintTop_toBottomOf="@+id/creditos" />


</androidx.constraintlayout.widget.ConstraintLayout>
