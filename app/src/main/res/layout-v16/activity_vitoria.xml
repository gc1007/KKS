<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_game_over"
    tools:context=".VitoriaActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/taca"
            android:layout_width="match_parent"
            android:layout_height="411dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/imageB"
            app:srcCompat="@drawable/vitoria" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center_horizontal|center"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="@string/score" />

        <Button
            android:id="@+id/bt_inicio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/button_shape"
            android:contentDescription="@string/bt_inicio"
            android:fontFamily="@font/antic_slab"
            android:onClick="go_to_inicio"
            android:text="@string/bt_inicio"
            android:textColor="@drawable/text_main_bt"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>